<!DOCTYPE html>
<html>
<head>
	<title>Goodfoodhunting</title>
	<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>
	<nav>
		<ul>
			<li><%= link_to 'Home', root_path %></li>
			<li><%= link_to 'Dishes', dishes_path %></li>
			<li><%= link_to 'Create New Dish', new_dish_path %></li>
			<li><%= link_to 'Users', users_path %></li>
			<li><%= link_to 'Sign Up', new_user_path %></li>
			<li><%= link_to 'Tags', tags_path %></li>
			<li><%= link_to 'Create New Tag', new_tag_path %></li>
		</ul>

		<div style="position: absolute; top: 4%; right: 5%;">
			<% if logged_in? %>
				<%= link_to "Log Out", logout_path, :method => :delete%>
				<% else %>
				<%= link_to "Log In", login_path %>
			<% end %>
		</div>
	</nav>
	<div id="container">
		<%= yield %>
	</div>
</body>
</html>
